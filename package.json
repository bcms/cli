{
  "name": "@becomes/cms-cli",
  "version": "2.0.0",
  "description": "CLI to help you with BCMS development.",
  "author": "becomes.co",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/bin/bcms.ts",
    "build:ts": "tsc",
    "build": "node tools.js --build",
    "bundle": "node tools.js --bundle",
    "link": "node tools.js --link",
    "link:sudo": "node tools.js --link --sudo",
    "unlink": "node tools.js --unlink",
    "unlink:sudo": "node tools.js --unlink --sudo",
    "publish": "node tools.js --publish",
    "pack": "node tools.js --pack",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "inquirer": "^8.1.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/inquirer": "^7.3.3",
    "@types/node": "^15.6.2",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.24.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becomesco/cms-cli.git"
  },
  "bugs": {
    "url": "https://github.com/becomesco/cms-cli/issues"
  },
  "homepage": "https://github.com/becomesco/cms-cli#readme",
  "bin": {
    "bcms": "bin/bcms.js"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts"
  }
}
